<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app3roodk">

    <permission
        android:name="com.app3roodk.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.app3roodk.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:replace="android:supportsRtl">
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/key_map" />

        <activity android:name=".UI.OffersCards.CardsActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.PositioningActivity.PositioningActivity" />
        <activity
            android:name=".UI.IntroActivity.IntroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.MainActivity.MainActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".UI.DetailActivity.DetailActivity">
            <intent-filter>
                <action android:name="OPEN_ACTIVITY_1" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.Shop.ShopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.Offer.AddNewOfferActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".MapsPathsActivity" />
        <activity android:name=".MapsShopsActivity" />
        <activity android:name=".MapsShopLocationActivity" />
        <activity
            android:name=".UI.FullScreenImage.FullScreenImageSlider"
            android:label="@string/title_activity_full_screen_image_slider"
            android:parentActivityName=".UI.DetailActivity.DetailActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app3roodk.UI.DetailActivity.DetailActivity" />
        </activity>
        <activity android:name=".UI.Shop.ViewShopActivity" />
        <activity android:name=".UI.Feedback.FeedbackActivity" />
        <activity android:name=".UI.FavoritesCards.FavoritesActivity" />
        <activity android:name=".UI.Shop.ListShopsActivity" />
        <activity android:name=".UI.About.AboutActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/AppThemeForCrop" />
        <activity android:name=".UI.IntroActivity.NewIntroActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="275139032860396" />

        <service android:name=".NotificationServices.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".NotificationServices.InstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name=".TestProvider"
            android:authorities="com.app3roodk.authority" />

        <activity android:name=".UI.CitySelect.CitySelectionActivity" />
        <activity android:name=".UI.NotificationLog.NotificationLogActivity" />
        <activity android:name=".UI.Hyper.HyperActivity"></activity>
    </application>

</manifest>