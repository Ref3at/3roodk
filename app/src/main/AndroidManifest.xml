            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".UI.PositioningActivity.PositioningActivity" />
        <activity android:name=".UI.CategoriesActivity.CategoriesActivity" />
        <activity android:name=".UI.DetailActivity.DetailActivity" />
        <activity android:name=".UI.Shop.ShopActivity">

