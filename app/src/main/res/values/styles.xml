<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#039BE5</item>
        <!-- Light Indigo -->
        <item name="colorPrimaryDark">#0277BD</item>
        <!-- Dark Indigo -->
        <item name="colorAccent">#00B0FF</item>
        <!-- Blue -->
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="AppTheme.Edit" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#039BE5</item>
        <!-- Light Indigo -->
        <item name="colorPrimaryDark">#0277BD</item>
        <!-- Dark Indigo -->
        <item name="colorAccent">#1565C0</item>
        <!-- Blue -->
    </style>

    <style name="AppThemeForCrop" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme" parent="AppTheme.Base" />

    <attr name="cardStyle" format="reference" />

    <style name="Light" parent="Theme.AppCompat.NoActionBar">
        <item name="cardStyle">@style/CardView.Light</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FirbaseUITheme" parent="FirebaseUI">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/signingscreen</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

    <style name="TextAppearance.CommentTimestamp" parent="@android:style/TextAppearance.Material.Caption" tools:targetApi="lollipop">
        <item name="android:textColor">@color/hint_disabled_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFeatureSettings">onum, smcp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>



    <style name="TextAppearance.CommentAuthor" parent="@android:style/TextAppearance.Material.Caption" tools:targetApi="lollipop">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFeatureSettings" tools:targetApi="lollipop">smcp, onum</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
    </style>



    <style name="Widget.Plaid" parent="android:Widget" />

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>

    </style>

    <style name="TextAppearance.Comment" parent="@android:style/TextAppearance.Material.Body1" tools:targetApi="lollipop">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <!--<item name="android:letterSpacing">0.01</item>-->
    </style>

</resources>
